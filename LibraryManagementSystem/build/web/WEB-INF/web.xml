<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>bookSearch</servlet-name>
        <servlet-class>BookServlets.bookSearch</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bookCheckout</servlet-name>
        <servlet-class>BookServlets.bookCheckout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bookCheckinSearch</servlet-name>
        <servlet-class>BookServlets.bookCheckinSearch</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bookCheckin</servlet-name>
        <servlet-class>BookServlets.bookCheckin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bookFines</servlet-name>
        <servlet-class>BookServlets.bookFines</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bookPayfines</servlet-name>
        <servlet-class>BookServlets.bookPayfines</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bookBorrowers</servlet-name>
        <servlet-class>BookServlets.bookBorrowers</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookSearch</servlet-name>
        <url-pattern>/bookSearch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bookCheckout</servlet-name>
        <url-pattern>/bookCheckout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bookCheckinSearch</servlet-name>
        <url-pattern>/bookCheckinSearch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bookCheckin</servlet-name>
        <url-pattern>/bookCheckin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bookFines</servlet-name>
        <url-pattern>/bookFines</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bookPayfines</servlet-name>
        <url-pattern>/bookPayfines</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bookBorrowers</servlet-name>
        <url-pattern>/bookBorrowers</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
